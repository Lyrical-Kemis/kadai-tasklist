<h1>タスクリスト</h1>

<% if logged_in? %>
  <% if @tasks.any? %>
  
  <p>ようこそ！ <%= current_user.name %> さん!</p>
  
    <table class="table table-striped">
      <thead>
        <tr>
          <th>id</th>
          <th>ステータス</th>
          <th>タスク内容</th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.status %></td>
          <td><%= task.content%></td>
        </tr>
        <% end %>  
      </tbody>
    </table>
    <div>
      <%= paginate @tasks %>
    </div>
  <% end %>
  
  <%= link_to '新規タスク', new_task_path, class: 'btn btn-primary glyphicon glyphicon-pencil' %>
<% else %>

<%= link_to 'ログイン', signup_path, class: 'btn btn-primary glyphicon glyphicon-pencil' %>

<% end %>